#include <iostream>
#include <string>
#include <conio.h>
#include <windows.h>

void drawmap(char map[][10]){
    for(int row=0;row<10;row++){
        for(column=0;row<10;row++){
            cout<<map[row][column];
        }
        cout<<'\n';
    }
}

int main(){
    cout<<"Welcome to Matthew Wang's text-based PAC-MAN. Use the arrow keys to move around";
    cout<<"Press ESC to quit playing";
    int i,j,x=5,y=5
    char map[10][10];
    for(i=0;i<10;i++){
        for(j=0;j<10;j++){
            map[i][j]="X";
        }
    }
    int ch;
    for(;;){
        ch=_getch();
        switch(ch)
        {
        case UP:
            if (x-1>=0){
				system("CLS");
				maze[x][y]='X';
				x--;
				maze[x][y]='+';
				drawmap(maze);
			}
			break;
        case LEFT:
            if(y-1>=0){
                system("CLS");
				maze[x][y]='X';
				y--;
				maze[x][y]='+';
				drawmap(maze);
            }
        case DOWN:
            if(x+1<10){
                system("CLS");
				maze[x][y]='X';
				x++;
				maze[x][y]='+';
				drawmap(maze);
            }
        case RIGHT:
            if(y+1<10){
                system("CLS");
				maze[x][y]='X';
				y++;
				maze[x][y]='+';
				drawmap(maze);
            }
        case ESC:
            goto exit;
            break;
    }
    exit:
    return 0;
}
