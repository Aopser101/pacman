#include <iostream>
#include <string>
#include <conio.h>
#include <windows.h>

using namespace std;

void drawmap(char map[][10]){
    for(int row=0;row<10;row++){
        for(int column=0;column<10;column++){
            cout<<map[row][column];
        }
        cout<<'\n';
    }
}

int main(){
    int i,j,x=5,y=5,ch;
    char map[10][10];
    for(i=0;i<10;i++){
        for(j=0;j<10;j++){
            map[i][j]='X';
        }
    }
    drawmap(map);
    cout<<'\n';
    cout<<"Welcome to Matthew Wang's text-based PAC-MAN. Use the arrow keys to move around."<<'\n';
    cout<<"Press ESC to quit playing";
    while(true){
        ch=getch();
        switch(ch)
        {
        case 72:
            if (x-1>=0){
				system("CLS");
				map[x][y]='X';
				x--;
				map[x][y]='+';
				drawmap(map);
			}
			break;
        case 75:
            if(y-1>=0){
                system("CLS");
				map[x][y]='X';
				y--;
				map[x][y]='+';
				drawmap(map);
            }
        case 80:
            if(x+1<10){
                system("CLS");
				map[x][y]='X';
				x++;
				map[x][y]='+';
				drawmap(map);
            }
        case 77:
            if(y+1<10){
                system("CLS");
				map[x][y]='X';
				y++;
				map[x][y]='+';
				drawmap(map);
            }
        case VK_ESCAPE:
            goto exit;
            break;
    }
}
   exit:
   return 0;
}
